<div class="container text-center" style="border-color: transparent;">
  <% if flash[:notice] %>
    <h2 style="color: red;"><%= flash[:notice] %></h2>
  <% end %>

  <% if @product_model.errors.any? %>
    <div style="color: red;">
      <h3><%= pluralize(@product_model.errors.count, "erro") %> impediram o cadastro do produto:</h3>
      <% @product_model.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>  
</div>

<%= render "form" %>

<div class="container text-center" style="border-color: transparent;">
  <% if flash[:notice] %>
    <h2 style="color: red;">
      <%= flash[:notice] %>
    </h2>
  <% end %>

  <% if @supplier.errors.any? %>
    <div style="color: red;">
      <h3><%= pluralize(@supplier.errors.count, "erro") %> impediram o cadastro do fornecedor:</h3>
      <% @supplier.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>  
</div>

<%= render "form" %>

<div class="container text-center mt-3">
  <%= link_to "Voltar", root_path, class: "btn btn-secondary" %>
</div>
<%= form_with(model: @warehouse, class: "container mt-3") do |form| %> 
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :name %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_area :description, class: "form-control" %>
    <%= form.label :description, style: "vertical-align: top;" %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_field :code, class: "form-control" %>
    <%= form.label :code %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_field :address, class: "form-control" %>
    <%= form.label :address %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_field :city, class: "form-control" %>
    <%= form.label :city %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.text_field :cep, class: "form-control" %>
    <%= form.label :cep %>
  </div>
  <div class="form-floating mb-2 w-50 mx-auto">
    <%= form.number_field :area, class: "form-control" %>
    <%= form.label :area %>
  </div>
  <div class="text-center">
    <%= form.submit %>
  </div>
<% end %>
